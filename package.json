{
  "name": "okusuri-support",
  "version": "0.1.0",
  "description": "患者本人とサポートする保護者の二人三脚で服薬管理行うための支援アプリ。まずは記録することを目的として、患者のその意思を肯定的に尊重する。記録が継続的に行えるよう支援、また保護者は患者の服薬状況を把握し、必要に応じて適切なサポートを行えることを目指す。",
  "keywords": [
    "typescript",
    "template",
    "boilerplate",
    "claude-code",
    "llm-development",
    "ai-development",
    "development-rules",
    "quality-assurance"
  ],
  "author": "trust.delta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trust-delta/okusuri-support.git"
  },
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:summary": "node scripts/show-coverage.js",
    "test:coverage:clean": "rm -rf coverage .vitest-cache",
    "test:coverage:fresh": "npm run test:coverage:clean && npm run test:coverage",
    "test:watch": "vitest",
    "format": "biome format --write src app",
    "format:check": "biome format src app",
    "lint": "next lint && biome lint src app",
    "lint:fix": "biome lint --write src app",
    "check": "biome check src app",
    "check:fix": "biome check --write src app",
    "check:unused": "ts-prune --project tsconfig.json --ignore 'src/index.ts|__tests__|test|vitest'",
    "check:deps": "madge --circular --extensions ts,tsx src",
    "check:deps:graph": "madge --extensions ts,tsx --image graph.svg src app",
    "check:all": "npm run check && npm run lint && npm run format:check && npm run check:unused && npm run check:deps && npm run build && npm run test",
    "db:types": "supabase gen types typescript --local > src/lib/supabase/database.generated.ts",
    "db:types:remote": "supabase gen types typescript > src/lib/supabase/database.generated.ts",
    "cleanup:processes": "bash ./scripts/cleanup-test-processes.sh",
    "test:safe": "npm test && npm run cleanup:processes",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lang:ja": "node scripts/set-language.js ja",
    "lang:en": "node scripts/set-language.js en",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --collect.staticDistDir=.next"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "^15.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^4.1.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.2",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/nextjs-vite": "^9.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-plugin-storybook": "^9.1.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "madge": "^8.0.0",
    "storybook": "^9.1.2",
    "supabase": "^2.34.3",
    "ts-prune": "^0.10.3",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "20"
  },
  "lint-staged": {
    "{src,app}/**/*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
